# 数据库配置
MONGODB_URI=mongodb://mongodb:27017/smtp_relay
MONGODB_DATABASE=smtp_relay

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# RabbitMQ配置
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=smtp_relay
RABBITMQ_QUEUE=mail_queue

# SMTP服务器配置
SMTP_HOST=0.0.0.0
SMTP_PORT_25=25
SMTP_PORT_587=587
SMTP_PORT_465=465
SMTP_DOMAIN=localhost

# API服务配置
API_PORT=8080
API_SECRET_KEY=your-secret-key-change-in-production
JWT_EXPIRY=24h

# 邮件发送配置
DAILY_QUOTA_DEFAULT=1000
HOURLY_QUOTA_DEFAULT=100
MAX_RECIPIENTS_PER_EMAIL=100
MAX_EMAIL_SIZE=25MB

# 上游SMTP服务器配置（容器化Postfix）
UPSTREAM_SMTP_HOST=postfix
UPSTREAM_SMTP_PORT=25
UPSTREAM_SMTP_USERNAME=
UPSTREAM_SMTP_PASSWORD=
UPSTREAM_SMTP_USE_TLS=false
UPSTREAM_SMTP_TIMEOUT=30s

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# SSL/TLS配置
TLS_CERT_PATH=/etc/ssl/certs/server.crt
TLS_KEY_PATH=/etc/ssl/private/server.key

# 安全配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h
PASSWORD_MIN_LENGTH=8

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090 